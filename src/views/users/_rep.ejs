<% if (user && user.uid !== dude.uid) { %>
<div class="text-center pt-3">
  <div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <form action="/users/posrep/<%= user.uid %>/<%= dude.uid %>" method="POST">
      <button type="submit" class="btn btn-success mr-3">
        <img src="../../public/emojis/upvote.png" alt="upvote" width="25" height="25" class="inline-block align-middle"> <%= dude.posRep %>
      </button>
    </form>
    <form action="/users/negrep/<%= user.uid %>/<%= dude.uid %>" method="POST">
      <button type="submit" class="btn btn-danger">
        <img src="../../public/emojis/downvote.png" alt="downvote" width="25" height="25" class="inline-block align-middle"> <%= dude.negRep %>
      </button>
    </form>
  </div>
</div>
<% } else { %>
<div class="text-center pt-3">
  <a
    href="#"
    class="btn btn-success btn-lg disabled"
    tabindex="-1"
    role="button"
    aria-disabled="true"
    ><img src="../../public/emojis/upvote.png" alt="upvote" width="25" height="25" class="inline-block align-middle"> <%= dude.posRep %></a
  >
  <a
    href="#"
    class="btn btn-danger btn-lg disabled"
    tabindex="-1"
    role="button"
    aria-disabled="true"
    ><img src="../../public/emojis/downvote.png" alt="downvote" width="25" height="25" class="inline-block align-middle"> <%= dude.negRep %></a
  >
</div>
<% } %>
