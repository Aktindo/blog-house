<div class="container">
    <%- include('../partials/messages') %>
    <h1><i class="fas fa-user-cog"></i> Account settings</h1>
    <form action="/dashboard/settings/name?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name" class="mb-4">Edit Name</label>
            <input required value="<%= user.name %>" type="text" name="name" id="name" class="form-control mb-4">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <div class="mb-10"></div>
    <form action="/dashboard/settings/bio?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name" class="mb-4">Edit Bio</label>
            <input required value="<%= user.bio || "No bio" %>" type="text" name="bio" id="bio" class="form-control mb-4">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <div class="mb-10"></div>
    <form action="/dashboard/settings/avatar?_method=PUT" method="POST">
        <div class="form-group">
            <label for="avatar" class="mb-4">Change Avatar</label>
            <input type="text" name="avatar" id="avatar" placeholder="Image URL" class="form-control mb-4">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <div class="mb-10"></div>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Delete Account</button>
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete your account?</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              This action cannot be undone
            </div>
            <div class="modal-footer">
                <form action="/dashboard/settings/delete?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Yes</button>
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <div class="mb-4"></div>
</div>