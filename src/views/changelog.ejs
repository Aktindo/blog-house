<div class="container">
    <h1 class="pb-5"><i class="fas fa-sync"></i> Changelog</h1>
    <h2 class="text-blue-400 pb-3"><i class="fab fa-github-alt"></i> Recent GitHub commits</h2>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Committer</th>
            <th scope="col">Date</th>
            <th scope="col">Message</th>
          </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < 3; i++) { %>
                <tr>  
                    <th scope="row"><%= i+1 %></th>
                    <td><%= data[i].commit.committer.name %></td>
                    <td><%= moment(data[i].commit.committer.date).fromNow() %></td>
                    <td><a href="<%= data[i].commit.url %>" class="no-underline text-black hover:text-blue-400"><%= data[i].commit.message %></a></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <h2 class="pt-5 text-blue-400"><i class="far fa-newspaper"></i> Recent news from the dev</h2>
    <div class="pt-3" id="changelog">
        <h1 class="mb-1">
            <%= cdata.title %>
        </h1>
        <h3 class="mb-1">
            <%= cdata.description %>
        </h3>
        <div class="mt-4 mb-4">
            <%- cdata.sanitizedHTML %>
        </div>
        <p><img src="<%= cdata.avatar %>" alt="avatar" width="25" height="25" class="avatar inline-block align-middle">
            <small class="text-muted">By <strong><a
                        href="/users/<%= slugify(cdata.author) %>"><%= cdata.author %></a></strong></small></p>
        <div class="text-muted mb-2">
            <%= moment(cdata.date).fromNow() %>
        </div>
    </div>
</div>