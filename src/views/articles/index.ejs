<div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-primary"><img src="../../public/art/new.png" alt="new" width="25" height="25" class="inline-block align-center"> New</a>
    <% articles.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= article.title %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= article.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-text mb-2">
                    <%= article.description %>
                </div>
                <p class="card-text"><small class="text-muted">By <strong><%= article.author %></strong></small></p>
                <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read more</a>
                <% if (article.author === user.name) { %>
                    <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                <% } %>
            </div>
        </div>
    <% }) %>
</div>